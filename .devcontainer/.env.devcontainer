# Dev Container Environment Configuration
# This file contains settings optimized for development in the dev container

# Database
DATABASE_PATH=/app/quotes.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Binance API Configuration
BINANCE_REST_URL=https://api.binance.com
BINANCE_WS_BASE_URL=wss://stream.binance.com:9443/ws

# Quote Consumer Configuration
QUOTE_SAVE_INTERVAL=30
QUOTE_RETENTION_DAYS=7

# General Configuration
LOG_LEVEL=DEBUG
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=/app/crypto_converter.log
LOG_TO_FILE=true
